---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Server Error - FastBlog">
  <Header />
  
  <main class="min-h-screen bg-gradient-to-br from-red-50 to-red-100 dark:from-red-900/20 dark:to-red-800/20 flex items-center justify-center px-6">
    <div class="text-center max-w-2xl mx-auto">
      <!-- 500 Number -->
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-red-300 dark:text-red-600 leading-none">
          500
        </h1>
      </div>
      
      <!-- Error Message -->
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Internal Server Error
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
          Something went wrong on our end. We're working to fix this issue.
        </p>
        <p class="text-gray-500 dark:text-gray-400">
          Please try again in a few moments or contact support if the problem persists.
        </p>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <!-- Refresh Page -->
        <button 
          onclick="window.location.reload()"
          class="inline-flex items-center px-6 py-3 bg-red-600 dark:bg-red-500 text-white font-semibold rounded-full hover:bg-red-700 dark:hover:bg-red-600 transition-colors shadow-lg"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Try Again
        </button>
        
        <!-- Back to Home -->
        <a 
          href="/"
          class="inline-flex items-center px-6 py-3 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-full hover:border-gray-400 dark:hover:border-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Back to Home
        </a>
      </div>
      
      <!-- Error Details (for development) -->
      <div class="mt-12 pt-8 border-t border-red-200 dark:border-red-700/50">
        <details class="text-left">
          <summary class="cursor-pointer text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
            Technical Details
          </summary>
          <div class="mt-4 p-4 bg-gray-100 dark:bg-gray-800 rounded-lg text-sm text-gray-700 dark:text-gray-300">
            <p><strong>Error Code:</strong> 500 Internal Server Error</p>
            <p><strong>Timestamp:</strong> {new Date().toISOString()}</p>
            <p><strong>Suggestion:</strong> Please refresh the page or try again later.</p>
          </div>
        </details>
      </div>
      
      <!-- Illustration -->
      <div class="mt-12">
        <div class="inline-flex items-center justify-center w-32 h-32 bg-red-100 dark:bg-red-900/30 rounded-full">
          <svg class="w-16 h-16 text-red-400 dark:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Custom animations for 500 page */
  @keyframes pulse-red {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  .animate-pulse-red {
    animation: pulse-red 2s ease-in-out infinite;
  }
  
  /* Make the 500 number animated */
  h1 {
    background: linear-gradient(45deg, #ef4444, #f87171, #ef4444);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradient 3s ease infinite;
  }
  
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  
  /* Dark mode adjustments */
  .dark h1 {
    background: linear-gradient(45deg, #dc2626, #ef4444, #dc2626);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
