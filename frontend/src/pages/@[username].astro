---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProfileActionButton from '../islands/ProfileActionButton.tsx';

export const prerender = false;

const { username } = Astro.params;

let user = null;
let articles = [];
let error = null;

try {
  const backendUrl = import.meta.env.BACKEND_URL || 'http://localhost:3001';
  
  // Fetch user profile
  const userResponse = await fetch(`${backendUrl}/api/v1/users/profile/${username}`);
  
  if (userResponse.ok) {
    user = await userResponse.json();
    
    // Fetch user's articles
    if (user.id) {
      const articlesResponse = await fetch(`${backendUrl}/api/v1/users/${user.id}/articles`);
      if (articlesResponse.ok) {
        const articlesData = await articlesResponse.json();
        articles = articlesData.articles || [];
      }
    }
  } else {
    error = `User not found (${userResponse.status})`;
  }
} catch (err) {
  error = 'Failed to fetch user profile';
  console.error('Error fetching user profile:', err);
}

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title={user ? `${user.display_name || user.username} - FastBlog` : 'User Not Found'}>
  <Header />

  <main class="min-h-screen bg-white dark:bg-gray-900">
    {user ? (
      <div class="max-w-4xl mx-auto px-6 py-12">
        <!-- User Profile Header -->
        <div class="text-center mb-12">
          <!-- Avatar -->
          <div class="mb-6">
            {user.avatar_url ? (
              <img 
                src={user.avatar_url.startsWith('http') ? user.avatar_url : `http://localhost:3001${user.avatar_url}`}
                alt={user.display_name || user.username}
                class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-white shadow-lg"
              />
            ) : (
              <div class="w-32 h-32 bg-gray-300 dark:bg-gray-600 rounded-full flex items-center justify-center mx-auto border-4 border-white shadow-lg">
                <span class="text-gray-600 dark:text-gray-300 font-bold text-4xl">
                  {(user.display_name || user.username).charAt(0).toUpperCase()}
                </span>
              </div>
            )}
          </div>

          <!-- Name and Username -->
          <div class="mb-4">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
              {user.display_name || user.username}
            </h1>
            <p class="text-lg text-gray-600 dark:text-gray-400">@{user.username}</p>
          </div>

          <!-- Stats -->
          <div class="flex justify-center items-center space-x-8 mb-6">
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900 dark:text-white">
                {user.followers_count || 0}
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Followers</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900 dark:text-white">
                {user.following_count || 0}
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Following</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-900 dark:text-white">
                {user.articles_count || 0}
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Articles</div>
            </div>
          </div>

          <!-- Bio -->
          {user.bio && (
            <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-2xl mx-auto mb-6">
              {user.bio}
            </p>
          )}

          <!-- Verification Badge -->
          {user.is_verified && (
            <div class="flex items-center justify-center text-blue-600 mb-6">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">Verified</span>
            </div>
          )}

          <!-- Follow/Edit Profile Button -->
          <ProfileActionButton 
            profileUserId={user.id} 
            profileUsername={user.username}
            client:load 
          />

          <!-- Member Since -->
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Member since {formatDate(user.created_at)}
          </p>
        </div>

        <!-- User Articles Section -->
        <div class="border-t border-gray-200 dark:border-gray-800 pt-12">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">
            Articles by {user.display_name || user.username}
          </h2>
          
          {articles.length > 0 ? (
            <div class="grid gap-6">
              {articles.map((article) => (
                <article key={article.id} class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
                  {article.featured_image_url && (
                    <div class="mb-4">
                      <img 
                        src={article.featured_image_url.startsWith('http') ? article.featured_image_url : `http://localhost:3001${article.featured_image_url}`}
                        alt={article.title}
                        class="w-full h-48 object-cover rounded-lg"
                      />
                    </div>
                  )}
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                    <a href={`/article/${article.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {article.title}
                    </a>
                  </h3>
                  {article.subtitle && (
                    <p class="text-lg text-gray-700 dark:text-gray-300 mb-3">{article.subtitle}</p>
                  )}
                  {article.excerpt && (
                    <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">{article.excerpt}</p>
                  )}
                  <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                    <div class="flex items-center space-x-4">
                      <span>{article.reading_time_minutes} min read</span>
                      <span>•</span>
                      <span>{article.claps_count} claps</span>
                      <span>•</span>
                      <span>{article.views_count} views</span>
                    </div>
                    <span>{formatDate(article.published_at || article.created_at)}</span>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <div class="text-gray-400 mb-4">
                <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                No articles yet
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                This user hasn't published any articles yet.
              </p>
            </div>
          )}
        </div>
      </div>
    ) : (
      <!-- User Not Found -->
      <div class="max-w-2xl mx-auto px-6 py-16 text-center">
        <div class="text-gray-400 mb-6">
          <svg class="w-24 h-24 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          User Not Found
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
          {error || 'The user you are looking for does not exist.'}
        </p>
        <div class="space-x-4">
          <a href="/" class="bg-gray-900 dark:bg-white text-white dark:text-gray-900 px-6 py-3 rounded-full font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors">
            Back to Home
          </a>
        </div>
      </div>
    )}
  </main>
</Layout>
