---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import UserFeed from '../islands/UserFeed.tsx';
import TrendingArticles from '../islands/TrendingArticles.tsx';
import UserRecommendations from '../islands/UserRecommendations.tsx';
---

<Layout title="Your Feed">
  <Header />

  <main class="min-h-screen bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Feed -->
        <div class="lg:col-span-2">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Your Feed</h1>
          <UserFeed client:load />
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <!-- User Recommendations -->
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <UserRecommendations client:load />
          </div>

          <!-- Trending Articles -->
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <TrendingArticles client:load />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
