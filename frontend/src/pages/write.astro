---
import Layout from '../layouts/Layout.astro';
import ArticleEditor from '../islands/ArticleEditor.tsx';

// Enable server-side rendering for this page
export const prerender = false;
---

<Layout title="Write Story - FastBlog" description="Share your story with the world">
  <main class="min-h-screen bg-white dark:bg-gray-900">
    <!-- Header dengan minimal design -->
    <header class="border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
          FastBlog
        </a>
        
        <div class="flex items-center gap-4">
          <button id="save-draft" class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
            Save Draft
          </button>
          <button id="publish-btn" class="bg-gray-900 dark:bg-white text-white dark:text-gray-900 px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors">
            Publish
          </button>
        </div>
      </div>
    </header>

    <!-- Article Editor -->
    <div class="max-w-4xl mx-auto px-4 py-8">
      <ArticleEditor client:load />
    </div>
  </main>
</Layout>

<style>
  /* Minimal, clean styling for write page */
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }
</style>
