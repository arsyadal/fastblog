---
import Layout from '../layouts/Layout.astro';
import WritePage from '../islands/WritePage.tsx';

// Enable server-side rendering for this page
export const prerender = false;
---

<Layout title="Write Story - FastBlog" description="Share your story with the world">
  <main class="min-h-screen bg-white dark:bg-gray-900">
    <!-- Write Page with Sidebar, Header, and Editor -->
    <WritePage client:load />
  </main>
</Layout>

<style>
  /* Minimal, clean styling for write page */
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }
</style>
